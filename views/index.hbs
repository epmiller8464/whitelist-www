{{#section 'scripts'}}
    <script src="/javascripts/app.bundle.min.js"></script>
    <script type="application/javascript" src="/javascripts/login.js"></script>
    <script>
        Vue.component('subscribe-form', {
            template: '<form id="subscribe-form" method="post" action="/subscribe"><input type="hidden" v-model="csrfToken"><div class="input-group"><input type="email" class="form-control" placeholder="Enter your e-mail" aria-label="Enter your e-mail" v-model="email"><span class="input-group-btn"><button class="btn btn-primary" type="button" @click="onSubscribe">Subscribe</button></span></div></form>',
            data: function () {
                return {
                    email: '',
                    csrfToken: '{{csrfToken}}'
                }
            },
            methods: {
                onSubscribe: function (event) {
                    var email = this.$data.email

                    if (!this.validateEmail(email)) {
                        $('#alert-label').removeClass('invisible').addClass('text-danger').text('Please enter a valid e-mail address.')
                        return
                    }
                    var csrfToken = this.$data.csrfToken
                    $.ajax({
                        method: 'POST',
                        url: '/marketing/newsletter/join',
                        data: {email: email, csrfToken: csrfToken},
                        dataType: 'json'
                    }).done(function (data) {
                        if (data.success) {
                            $('#alert-label').removeClass('invisible').addClass('text-success').text('Thank you!')
                        } else {
                            $('#alert-label').removeClass('invisible').addClass('text-danger').text(data.message)
                        }
                    }).fail(function (e) {
                        $('#alert-label').removeClass('invisible').addClass('text-danger').text('An error occured')
                    }).always(function () {
                        setTimeout(function () {
                            $('#alert-label').addClass('invisible').removeClass('text-danger').text('')
                        }, 5000)
                    })
                },
                validateEmail: function (email) {
                    var regex = new RegExp(/.+\@.+\..+/)
                    if ((!email) || !regex.test(email)) {
                        return false
                    }
                    return true
                }
            }
        })
        var app2 = new Vue({
            el: '#subscribe-section',
        })

        $(document).ready(function () {
            $('#swytch-video-modal').on('hide.bs.modal', function (e) {
                videojs('swytch-video').pause()
            })

            $('#login-modal').on('hide.bs.modal', function (e) {
                $('input[type="email"]').val('')
                $('input[type="password"]').val('')
            })
            $('#signup-modal').on('hide.bs.modal', function (e) {
                registerForm.clear()
            })
        })
    </script>
