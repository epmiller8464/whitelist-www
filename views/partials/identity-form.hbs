<div class="col-sm">
    <form class="form-signin" id="identity-form">
        <input type="hidden" v-model="csrf" value="{{csrfToken}}">
        <h5>Please Provide The Following</h5>
        <hr>
        <div class="form-group">
            <label>Full Name:</label>
            <div class="flextable">
                <div class="flextable-item pr-1">
                    <input type="text" v-model="first_name" class="form-control" value="{{user.first_name}}"/>
                </div>
                <div class="flextable-item pr-1">
                    <input type="text" v-model="last_name" class="form-control" value="{{user.last_name}}"/>
                </div>
            </div>
        </div>
        <div class="form-group">
            <label for="countryOrigin">Country:</label>
            <select class="form-control" v-model="country_code">
                <option disabled value="">Select Country</option>
                {{#each countries}}
                    <option value="{{this.code}}">{{this.name}}</option>
                {{/each}}
            </select>
        </div>
        <div class="form-group text-left">
            <label for="purchaseAmount">
                <small>Please indicate your contribution amount (in USD).<span class="text-danger">&nbsp;*</span>
                </small>
            </label>
            <select class="form-control" v-model="purchaseAmount">
                <option value="" disabled>Select an amount</option>
                {{#each contributionAmounts}}
                    <option value="{{this.value}}">{{this.display}}</option>
                {{/each}}
            </select>
        </div>
        <div class="mt-4">
            <label>
                <small>Please choose a crypto-asset, ETH (Ethereum) or BTC (BitCoin) which you plan to swap for Swytch.
                </small>
            </label>
            <div class="form-group">
                <div class="radio-inline">
                    <label>
                        <input type="radio" v-model="cryptoType" id="optionsRadios2" value="ETH">&nbsp;ETH
                    </label>
                </div>
                <div class="radio-inline">
                    <label>
                        <input type="radio" v-model="cryptoType" id="optionsRadios2" value="BTC">&nbsp;BTC
                    </label>
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="checkbox">
                <label for="usCitizenAttestation">
                    <input v-model="usCitizenAttestation" type="checkbox">&nbsp;I am a us citizen
                </label>
            </div>
        </div>
        <div class="mt-4">
            <div class="g-recaptcha pull-left" required data-sitekey="{{site_key}}"
                 data-callback="recaptchaCallback">
            </div>
        </div>
        <div class="my-4">
            <button disabled type="button" @click="onWhitelist" class="btn btn-lg btn-primary btn-block">
                Whitelist
            </button>
        </div>
    </form>
</div>
